<script type="text/javascript">

    function Delete_MemberIFollow(id) {
        var randomnumber = Math.floor(Math.random() * 11000000);
        if (confirm('Are you sure?') == true) { window.location = '/account/Delete_MemberIFollow?follower_id=' + id + '&R_Num=' + randomnumber; }
    }

    function Delete_MyFollower(id) {
        var randomnumber = Math.floor(Math.random() * 11000000);
        if (confirm('Are you sure?') == true) { window.location = '/account/Delete_MyFollower?follower_id=' + id + '&R_Num=' + randomnumber; }
    }

</script>





