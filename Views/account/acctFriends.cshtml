<!-- **************SECTION 3*************************** -->
<div id="Section3" style=" display:block;">


<div style=" width:100%; min-height:80px; background-color:#313537; overflow:hidden; margin-top:10px; border-radius:2px;">
        
                
                <div style=" float:right; width:98%; margin:1%; text-align:left; ">
    
                    <div style=" float:left; width:100%; height:25px; line-height:25px; color:#BCBCBC; font-size:18px; overflow:hidden; margin:5px 0 5px 0; text-align:left; ">
                        &nbsp;Members I Follow (@Model.MembersIFollow_list.Count)
                    </div>

                    @{ int counter_MembersIFollow_list = 0; }
                    @foreach (var item in Model.MembersIFollow_list)
                    {
                        if (counter_MembersIFollow_list > 150)
                        {
                            break;
                        }
                        else
                        {
                            counter_MembersIFollow_list++;
                        }

                        
                        if (item != null)
                        {
                        <div style=" float:left; width:100%; margin:5px 0 0 4px;">

                            <a href="/profile/@item.username" style=" display:block; float:left; width:250px; height:38px; background-color:#454545; border-radius:2px; text-align:left; cursor:pointer;">
                
                                <img alt="" src="@Url.Content("/userpics/" + item.username + "/" + item.profile_pic_id + "_s.jpg")" style=" float:left; width:36px; height:34px; margin:2px 0 0 2px;" onerror="this.src='/imgs/user_img_nf.png';" />
                                <div style=" float:left; margin:10px 0 0 7px; font-size:15px;">
                                    <text>&nbsp;</text>@item.username
                                </div>

                            </a> 
            
                            <div onclick="Delete_MemberIFollow(@item.id);" style=" float:left; width:50px; height:38px; text-align:left; color:#ABABAB; font-size:11px; background-color:#454545; border-radius:2px; margin-left:4px; cursor:pointer;">
                                <img alt="" src="/imgs/action_icons/delete_icon_s.png" style=" margin:10px 0 0 17px;" />
                            </div>
                        </div>
                        }
        
                    }
                </div>

          
</div>







<div style=" width:100%; min-height:80px; background-color:#313537; overflow:hidden; margin-top:10px; border-radius:2px;">
    
        

                <div style=" float:right; width:98%; margin:1%; text-align:left; ">

                    <div style=" float:left; width:100%; height:25px; line-height:25px; color:#ABABAB; font-size:18px; overflow:hidden; margin:5px 0 5px 0; text-align:left; ">
                        &nbsp;My Followers (@Model.MyFollowers_list.Count)
                    </div>


                    @{ int counter_MyFollowers_list = 0; }
                    @foreach (var item in Model.MyFollowers_list)
                    {
                        if (counter_MyFollowers_list > 150)
                        {
                            break;
                        }
                        else
                        {
                            counter_MyFollowers_list++;
                        }


                        
                        if (item != null)
                        {
                        <div style=" float:left; width:100%; margin:5px 0 0 4px;">
                
                            <a href="/profile/@item.username" style=" display:block; float:left; width:250px; height:38px; background-color:#454545; border-radius:2px; text-align:left; cursor:pointer;">
                    
                                <img alt="" src="@Url.Content("/userpics/" + item.username + "/" + item.profile_pic_id + "_s.jpg")" style=" float:left; width:36px; height:34px; margin:2px 0 0 2px;" onerror="this.src='/imgs/user_img_nf.png';" />
                                <div style=" float:left; margin:10px 0 0 7px; font-size:15px;">
                                    <text>&nbsp;</text>@item.username
                                </div>

                            </a>

                            <div onclick="Delete_MyFollower(@item.id);" style=" float:left; width:50px; height:38px; text-align:left; color:#FFFFFF; font-size:11px; background-color:#454545; border-radius:2px; margin-left:4px; cursor:pointer;">
                                <img alt="" src="/imgs/action_icons/delete_icon_s.png" style=" margin:10px 0 0 17px;" />
                            </div>
                        </div> 
                        }
        
                    }
                </div>


    
</div>



